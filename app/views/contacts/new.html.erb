<% provide(:title, 'Contact Jason') %>

<div class="col-md-offset-3 col-sm-6 body">

<% if @contact.errors.any? %>
	<ul><% @contact.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	</ul>
	<% end %>
<% end %>

<h3>Contact Me</h3>
<p>Please submit the form below.</p>

<p class="notice"><%= notice %></p>    

<p><%= form_for @contact do |f| %>
	<div class="form-group">
				<%= f.label :name, "Name:", class: "control-label" %><br />
				<%= f.text_field :name, autofocus: true, class: "form-control" %></div>
		
			<div class="form-group">
				<%= f.label :email, "Email Address:", class: "control-label" %><br />
				<%= f.text_field :email, class: "form-control" %></div>

			<div class="form-group">
				<%= f.label :message, "Please enter your message:", class: "control-label" %><br />
				<%= f.text_area :message, class: "form-control" %></div>

	  	<p><%= f.submit "Submit", class: "btn btn-primary btn-lg" %></p>

	</div>
</p>
<% end %>
</div>